FROM python:3.11-slim

# base system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential git && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app

ENV TOKENIZERS_PARALLELISM=false

# Build index on container start (ignore if already there), then run Streamlit
CMD ["bash", "-lc", "python app_startup_build.py || true; streamlit run app.py --server.port=8501 --server.address=0.0.0.0"]
